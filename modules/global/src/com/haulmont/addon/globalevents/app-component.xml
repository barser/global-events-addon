<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<app-component xmlns="http://schemas.haulmont.com/cuba/app-component.xsd"
               dependsOn="com.haulmont.cuba">
    <module blocks="*"
            name="global">
        <artifact appJar="true"
                  name="cubaglevt-global"/>
    </module>
    <module blocks="core,web,portal"
            name="shared-lib">
        <artifact appJar="false"
                  name="cubaglevt-shared-lib"/>
    </module>
    <module blocks="core"
            dependsOn="global,shared-lib"
            name="core">
        <artifact appJar="true"
                  name="cubaglevt-core"/>
        <property name="cuba.springContextConfig"
                  value="+com/haulmont/addon/globalevents/spring.xml"/>
    </module>
    <module blocks="web"
            dependsOn="global,shared-lib"
            name="web">
        <artifact appJar="true"
                  name="cubaglevt-web"/>
        <artifact classifier="web"
                  configuration="webcontent"
                  ext="zip"
                  name="cubaglevt-web"/>
        <property name="cuba.springContextConfig"
                  value="+com/haulmont/addon/globalevents/web-spring.xml"/>
    </module>
    <module blocks="desktop"
            dependsOn="global"
            name="desktop">
        <artifact name="cubaglevt-desktop"/>
        <property name="cuba.springContextConfig"
                  value="+com/haulmont/addon/globalevents/desktop-spring.xml"/>
    </module>
    <module blocks="portal"
            dependsOn="global,shared-lib"
            name="portal">
        <artifact appJar="true"
                  name="cubaglevt-portal"/>
        <property name="cuba.springContextConfig"
                  value="+com/haulmont/addon/globalevents/portal-spring.xml"/>
    </module>
</app-component>
